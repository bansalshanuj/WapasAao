<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_darkblue" >

    <LinearLayout
        android:id="@+id/login_inputs_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/send_credit_button"
            style="@style/landing_last_page_buttons"
            android:layout_width="136dp"
            android:layout_gravity="right"
            android:layout_marginRight="15dp"
            android:layout_marginTop="22dp"
            android:text="@string/send" />

        <ProgressBar
            android:id="@+id/cooldown_bar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="250dp"
            android:layout_marginRight="0dp"
            android:layout_marginTop="0dp"
            android:indeterminate="false"
            android:visibility="gone" />
    </LinearLayout>

    <TextView
        android:id="@+id/label_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_inputs_layout"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="19dp"
        android:text="@string/user_name"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/login_inputs_layout"
        android:layout_marginLeft="180dp"
        android:layout_marginTop="19dp"
        android:text="@string/not_applicable"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" 
        android:textColor="@color/white"/>
    
    
    <TextView
        android:id="@+id/label_billing_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_username"
        android:layout_marginLeft="15dp"
        android:text="@string/billing_amount"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/billing_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_username"
        android:layout_marginLeft="180dp"
        android:text="@string/default_value"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/label_discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_billing_amount"
        android:layout_marginLeft="15dp"
        android:text="@string/discount"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/discount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_billing_amount"
        android:layout_marginLeft="180dp"
        android:text="@string/default_value"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/label_final_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_discount"
        android:layout_marginLeft="15dp"
        android:text="@string/final_bill"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/final_bill"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_discount"
        android:layout_marginLeft="180dp"
        android:text="@string/default_value"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/label_redeem_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_final_bill"
        android:layout_marginLeft="15dp"
        android:text="@string/credit_offered"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/redeem_points"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_final_bill"
        android:layout_marginLeft="180dp"
        android:text="@string/default_value"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" 
        android:textColor="@color/white"/>
    
    <TextView
        android:id="@+id/partition"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_redeem_points"
        android:layout_marginLeft="15dp"
        android:text="@string/partition"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" 
        android:textColor="@color/white"/>
    
    <TextView
        android:id="@+id/label_total_transactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partition"
        android:layout_marginLeft="15dp"
        android:text="@string/total_transactions"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/total_transactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/partition"
        android:layout_marginLeft="180dp"
        android:text="@string/default_value"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textStyle="bold" 
        android:textColor="@color/white"/>

    <TextView
        android:id="@+id/label_transactions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/label_total_transactions"
        android:layout_marginLeft="15dp"
        android:text="@string/transactions"
        android:textAppearance="?android:attr/textAppearanceMedium" 
        android:textColor="@color/white"/>
    
    
   <ListView
            android:id="@+id/listview"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_below="@+id/label_transactions"/>
</RelativeLayout>